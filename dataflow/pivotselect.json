{
	"name": "pivotselect",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Source",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "pivot1"
				},
				{
					"name": "MapDrifted1",
					"description": "Creates an explicit mapping for each drifted column"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Id as integer,",
				"          Auhthor_id as integer,",
				"          Price as integer,",
				"          Edition as integer,",
				"          Year as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> source1",
				"source1 pivot(groupBy(Year),",
				"     pivotBy(Edition),",
				"     {} = avg(Price),",
				"     columnNaming: '$N$V',",
				"     lateral: true) ~> pivot1",
				"pivot1 derive(col1 = toDouble(byName('1')),",
				"          col2 = toDouble(byName('2')),",
				"          col3 = toDouble(byName('3')),",
				"          col4 = toDouble(byName('4')),",
				"          col5 = toDouble(byName('5')),",
				"          col6 = toDouble(byName('6')),",
				"          col7 = toDouble(byName('7')),",
				"          col8 = toDouble(byName('8')),",
				"          col9 = toDouble(byName('9')),",
				"          col10 = toDouble(byName('10'))) ~> MapDrifted1",
				"MapDrifted1 select(mapColumn(",
				"          Year,",
				"          col1,",
				"          col2,",
				"          col3,",
				"          col4,",
				"          col5,",
				"          col6,",
				"          col7,",
				"          col8,",
				"          col9,",
				"          col10",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     store: 'synapse',",
				"     databaseType: 'spark',",
				"     format: 'table',",
				"     database: 'Database1',",
				"     tableName: 'pivotsink') ~> sink1"
			]
		}
	}
}